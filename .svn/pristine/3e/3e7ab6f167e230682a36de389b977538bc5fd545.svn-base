@layout("/common/_container.html",{bg:"bg-white", js:["/assets/modular/business/work/workRecord_detail.js"]}){
<form id="workRecordForm" lay-filter="workRecordForm" class="layui-form model-form">
    <input id="workRecordId" name="workRecordId" value="${entity.id}" type="hidden">
    <div class="layui-form-item">
        <label class="layui-form-label">所属项目</label>
        <div class="layui-input-block">
            <input type="text" class="layui-input" value="${entity.projectName}" readonly/>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">总工时</label>
        <div class="layui-input-block">
            <input type="text" class="layui-input" value="${entity.time}小时" readonly/>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">提交时间</label>
        <div class="layui-input-block">
            <input type="text" class="layui-input" value="${entity.submitTime, dateFormat='yyyy-MM-dd HH:mm:ss'}" readonly/>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">终审时间</label>
        <div class="layui-input-block">
            <input type="text" class="layui-input" value="${entity.lastAuditTime, dateFormat='yyyy-MM-dd HH:mm:ss'}" readonly/>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">工作内容</label>
        <div class="layui-input-block">
            <textarea type="text/plain" class="layui-textarea" readonly>${entity.content}</textarea>
        </div>
    </div>
    <div class="layui-form-item">
        <fieldset class="layui-elem-field layui-field-title" style="margin-left: 40px;">
            <legend>流程记录</legend>
        </fieldset>
            <ul class="layui-timeline" style="margin-left:40px;">
                @for(audit in entity.audits) {
                <li class="layui-timeline-item">
                    <i class="layui-icon layui-timeline-axis"></i>
                    <div class="layui-timeline-content layui-text">
                        <h3 class="layui-timeline-title">【${audit.status.action}】<button type="button" class="layui-btn layui-btn-primary layui-btn-xs">${audit.createTime, dateFormat="yyyy-MM-dd HH:mm:ss"}</button></h3>
                        <p>
                            ${audit.remark}
                        </p>
                    </div>
                </li>
                @}
            </ul>
    </div>
    <div class="layui-form-item text-right">
        <button class="layui-btn layui-btn-primary" type="button" ew-event="closeDialog">关闭</button>
    </div>
</form>
@}
