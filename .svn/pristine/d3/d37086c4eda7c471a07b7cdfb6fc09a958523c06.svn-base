@layout("/common/_container.html",{bg:"bg-white", plugins:["ztree"], js:["/assets/modular/system/dept/dept.js"]}){

<div class="layui-body-header">
    <span class="layui-body-header-title">部门管理</span>
</div>

<div class="layui-fluid">
    <table class="layui-table" id="deptTable" lay-filter="deptTable"></table>
</div>

<script type="text/html" id="toolbar">
    <div class="layui-form toolbar">
        <div class="layui-form-item">
            <div class="layui-inline">
                <input id="name" class="layui-input" type="text" placeholder="简称/全称" value="{{d.where.name}}"/>
            </div>
            <div class="layui-inline">
                <button class="layui-btn icon-btn" lay-event="search"><i class="layui-icon">&#xe615;</i>搜索</button>
                @if(shiro.hasPermission("dept_add")){
                <button class="layui-btn icon-btn" lay-event="openAdd"><i class="layui-icon">&#xe654;</i>添加</button>
                @}
                <button class="layui-btn icon-btn" lay-event="expandAll"><i class="layui-icon">&#xe654;</i>展开所有</button>
                <button class="layui-btn icon-btn" lay-event="foldAll"><i class="layui-icon">&#xe656;</i>折叠所有</button>
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="tableBar">
    @if(shiro.hasPermission("dept_edit")){
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="edit">修改</a>
    @}
    @if(shiro.hasPermission("dept_delete")){
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="delete">删除</a>
    @}
</script>
@}